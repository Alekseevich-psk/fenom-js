{
    "compilerOptions": {
        "target": "ES2018",
        "lib": ["ES2018", "DOM"],
        "module": "ES2020",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "declaration": true, 
        "declarationDir": "./dist",
        "emitDeclarationOnly": false,
        "isolatedModules": true,
        "jsx": "preserve",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"]
}
