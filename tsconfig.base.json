{
    "compilerOptions": {
        "moduleResolution": "bundler",
        "module": "ESNext",
        "target": "ESNext",
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true, // ✅ создавать .d.ts
        "declarationDir": "./dist", // ✅ куда класть
        "emitDeclarationOnly": false, // можно true, если только типы
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": ["src"]
}
